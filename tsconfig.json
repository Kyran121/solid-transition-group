{
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "declaration": true,
    "target": "ESNext",
    "module": "ESNext",
    "newLine": "LF",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "./types",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  },
  "include": ["src", "dev"],
  "exclude": ["node_modules", "**/dist/**/*"]
}
