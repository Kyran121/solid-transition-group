{
  "compilerOptions": {
    "target": "ESNext",
    "newLine": "LF",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  },
  "include": ["src", "dev", "test"],
  "exclude": ["node_modules", "**/dist/**/*"]
}
